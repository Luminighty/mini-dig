{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": false,
		"checkJs": false,
		"paths": {
			"@shared/*": ["./shared/*"]
		}
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}